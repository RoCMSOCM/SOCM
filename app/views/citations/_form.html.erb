<%= form_for(@citation) do |f| %>
  <% if @citation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@citation.errors.count, "error") %> prohibited this citation from being saved:</h2>

      <ul>
      <% @citation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :journal %>
    <%= f.text_field :journal %>
  </div>
  <div class="field">
    <%= f.label :year %>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label :volume %>
    <%= f.text_field :volume %>
  </div>
  <div class="field">
    <%= f.label :number %>
    <%= f.text_field :number %>
  </div>
  <div class="field">
    <%= f.label :pages %>
    <%= f.text_field :pages %>
  </div>
  <div class="field">
    <%= f.label :month %>
    <%= f.text_field :month %>
  </div>
  <div class="field">
    <%= f.label :note %>
    <%= f.text_field :note %>
  </div>
  <div class="field">
    <%= f.label :key %>
    <%= f.text_field :key %>
  </div>

  <div class="checkbox">
  <%= f.collection_check_boxes(:galaxy_ids, Galaxy.all, :id, :galaxy_name) do |b| %>
    <%= b.label class: "checkbox-inline" do %>
      <%= b.check_box + b.text %>
    <% end %>
  <% end %>
  </div>

  <div class="g-recaptcha" data-sitekey="<%= ENV["RECAPTCHA_PUBLIC_KEY"] %>"></div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
