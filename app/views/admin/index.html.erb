<h1>Admins</h1>

<p id="notice"><%= notice %></p>

<%= link_to "All Admins", :action => "index" %>
|
<%= link_to "Admins awaiting approval", :action => "index", :approved => "false" %>

<table>
    <tr>
        <th>Email</th>
        <th>Approved</th>
        <th colspan="2"></th>
    </tr>
    <% @admins.each do |admin| %>
        <tr>
            <td>
              <%= admin.email %>
            </td>
            <td>
              <% if admin.approved.nil? %>
                false
              <% else %>
                <%= admin.approved %>
              <% end %>
            </td>
            <td>
              <%= link_to "Edit", edit_admin_path(id: admin.id) %>
            </td>
            <td>
              <%= link_to 'Destroy', "/admin/#{admin.id}", method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
        </tr>
    <% end %>
</table>
