<h1>Listing measurements</h1>

<table>
  <thead>
    <tr>
      <th>R</th>
      <th>R err min</th>
      <th>R err max</th>
      <th>Vrot data</th>
      <th>Vrot data err min</th>
      <th>Vrot data err max</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @measurements.each do |measurement| %>
      <tr>
        <td><%= measurement.r %></td>
        <td><%= measurement.r_err_min %></td>
        <td><%= measurement.r_err_max %></td>
        <td><%= measurement.vrot_data %></td>
        <td><%= measurement.vrot_data_err_min %></td>
        <td><%= measurement.vrot_data_err_max %></td>
        <td><%= link_to 'Show', measurement %></td>
        <td><%= link_to 'Edit', edit_measurement_path(measurement) %></td>
        <td><%= link_to 'Destroy', measurement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

