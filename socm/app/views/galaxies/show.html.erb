<h1>Galaxy <%= @galaxy.id %></h1>

<p id="notice"><%= notice %></p>

<p>
  <strong>Galaxy:</strong>
  <%= @galaxy.galaxy %>
</p>
<!-- TODO: Figure out galaxy column names -->

<br>
<%= link_to 'Edit', edit_galaxy_path(@galaxy) %> |
<%= link_to 'Back', galaxies_path %>

<br>

<% if @measurements.size > 0 %>
  <h2>Measurements for Galaxy <%= @galaxy.id %></h2>

  <%= link_to 'New Measurement', new_galaxy_measurement_path(@galaxy) %>

  <table>
    <% if !@q.nil? %>
      @q = <%= @q.inspect %>
      <%= search_form_for @q do |f| %>
        <%= f.label :id %>
        <%= f.search_field :id %>
        <%= f.label :galaxy_id %>
        <%= f.search_field :galaxy_id %>
        <%= f.label :r %>
        <%= f.search_field :r %>
        <%= f.label :r_err_min %>
        <%= f.search_field :r_err_min %>
        <%= f.label :r_err_max %>
        <%= f.search_field :r_err_max %>
        <%= f.label :vrot_data %>
        <%= f.search_field :vrot_data %>
        <%= f.label :vrot_data_err_min %>
        <%= f.search_field :vrot_data_err_min %>
        <%= f.label :vrot_data_err_max %>
        <%= f.search_field :vrot_data_err_max %>
        <%= f.submit %>
      <% end %>
    <% end %>
    <thead>
      <tr>
        <th>ID</th>
        <th>Galaxy ID</th>
        <th>R</th>
        <th>R err min</th>
        <th>R err max</th>
        <th>Vrot data</th>
        <th>Vrot data err min</th>
        <th>Vrot data err max</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @measurements.each do |measurement| %>
        <tr>
          <td><%= link_to "#{measurement.id}", galaxy_measurement_path(@galaxy, measurement) %></td>
          <td><%= measurement.galaxy_id %></td>
          <td><%= measurement.r %></td>
          <td><%= measurement.r_err_min %></td>
          <td><%= measurement.r_err_max %></td>
          <td><%= measurement.vrot_data %></td>
          <td><%= measurement.vrot_data_err_min %></td>
          <td><%= measurement.vrot_data_err_max %></td>
          <td><%= link_to 'Show', galaxy_measurement_path(@galaxy, measurement) %></td>
          <td><%= link_to 'Edit', edit_galaxy_measurement_path(@galaxy, measurement) %></td>
          <td><%= link_to 'Destroy', galaxy_measurement_path(@galaxy, measurement), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<% else %>
  <br>
  <%= link_to 'New Measurement', new_galaxy_measurement_path(@galaxy) %>
<% end %>
